@model Ticket_System_2020.Models.Ticket

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Ticket</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label for="projectName" class="control-label col-md-2">Project Name</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProjetName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ProjetName, "The Project Name field is required.", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="department" class="control-label col-md-2">Department</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DepartmentName, "The Department field is required.", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="requestName" class="control-label col-md-2">Submitted By</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.RequestName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RequestName, "The Submitted by field is required.", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="problemDescription" class="control-label col-md-2">Problem Description</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProblemDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ProblemDescription, "The Problem Description field is required.", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#ddlDepartment').change(function () {
            $.ajax({
                type: "post",
                url: "/DropDownList/GetEmployee",
                data: { departmentId: $('#ddlDepartment').val() },
                datatype: "json",
                traditional: true,
                success: function (data) {
                    var employee = "<select id='ddlEmployee'>";
                    employee = employee + '<option value="">--Select--</option>';
                    for (var i = 0; i < data.length; i++) {
                        employee = employee + '<option value=' + data[i].Value + '>' + data[i].Text + '</option>';
                    }
                    employee = employee + '</select>';
                    $('#Employee').html(employee);
                }
            });
        });
    });
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
